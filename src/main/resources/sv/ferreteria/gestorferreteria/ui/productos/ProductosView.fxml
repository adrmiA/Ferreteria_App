<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="25" xmlns:fx="http://javafx.com/fxml"
      fx:controller="sv.ferreteria.gestorferreteria.ui.productos.ProductosController"
      style="-fx-background-color: #f8fafc; -fx-padding: 30;">

    <Label text="Inventario de Productos" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />

    <HBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 4);">
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label text="Nombre del Producto" style="-fx-text-fill: #64748b; -fx-font-weight: bold; -fx-font-size: 12px;"/>
            <TextField fx:id="txtNombre" promptText="Nombre del artículo" style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-pref-height: 40; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Precio" style="-fx-text-fill: #64748b; -fx-font-weight: bold; -fx-font-size: 12px;"/>
            <TextField fx:id="txtPrecio" promptText="0.00" prefWidth="100" style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-pref-height: 40; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Stock" style="-fx-text-fill: #64748b; -fx-font-weight: bold; -fx-font-size: 12px;"/>
            <TextField fx:id="txtStock" promptText="0" prefWidth="80" style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-pref-height: 40; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Proveedor" style="-fx-text-fill: #64748b; -fx-font-weight: bold; -fx-font-size: 12px;"/>
            <ComboBox fx:id="comboProveedor" prefWidth="180" style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-pref-height: 40; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
        </VBox>

        <VBox alignment="BOTTOM_CENTER">
            <Button text="Añadir" onAction="#onAgregar"
                    style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40; -fx-pref-width: 100; -fx-background-radius: 8; -fx-cursor: hand;" />
        </VBox>
    </HBox>

    <TableView fx:id="tableProductos" VBox.vgrow="ALWAYS" style="-fx-background-radius: 12; -fx-border-color: #e2e8f0; -fx-border-radius: 12; -fx-overflow-x: hidden;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80" />
            <TableColumn fx:id="colNombre" text="Producto" prefWidth="350" />
            <TableColumn fx:id="colPrecio" text="Precio Unitario" prefWidth="120" />
            <TableColumn fx:id="colStock" text="Stock" prefWidth="120" />
            <TableColumn fx:id="colProveedor" text="Proveedor" prefWidth="200" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>