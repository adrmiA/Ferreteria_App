<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="sv.ferreteria.gestorferreteria.ui.proveedores.ProveedoresController"
      style="-fx-background-color: #f8fafc; -fx-padding: 30;">

    <VBox spacing="5">
        <Label text="Proveedores"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />
    </VBox>

    <HBox spacing="25" alignment="TOP_LEFT">

        <!-- Panel izquierdo: Formulario -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 4);"
              HBox.hgrow="NEVER" prefWidth="320">

            <Label text="DATOS DEL PROVEEDOR"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Separator />

            <VBox spacing="8">
                <Label text="Nombre de empresa" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #475569;"/>
                <TextField fx:id="txtNombre" style="-fx-pref-height: 45; -fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8;" />
            </VBox>

            <VBox spacing="8">
                <Label text="Teléfono de contacto" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #475569;"/>
                <TextField fx:id="txtTelefono" style="-fx-pref-height: 45; -fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8;" />
            </VBox>

            <VBox spacing="8">
                <Label text="Correo electrónico" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #475569;"/>
                <TextField fx:id="txtEmail" style="-fx-pref-height: 45; -fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8;" />
            </VBox>

            <Button text="Guardar Proveedor" onAction="#onAgregar"
                    prefHeight="45" prefWidth="280"
                    style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8;" />
        </VBox>

        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <Label text="Listado de Proveedores" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />

            <TableView fx:id="tableProveedor" VBox.vgrow="ALWAYS" style="-fx-background-radius: 12; -fx-border-color: #e2e8f0;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Razón Social" prefWidth="250"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>

    </HBox>

</VBox>
